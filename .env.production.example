# ScholarHub Production Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED - Must be set before deployment
# ============================================

# Database
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Security Keys (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL
COLLAB_JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
COLLAB_BOOTSTRAP_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
RESEND_FROM_EMAIL=noreply@scholarhub.space

# URLs
FRONTEND_URL=https://scholarhub.space
BACKEND_PUBLIC_URL=https://scholarhub.space
BACKEND_CORS_ORIGINS=["https://scholarhub.space","https://www.scholarhub.space"]
GOOGLE_REDIRECT_URI=https://scholarhub.space/api/v1/google/callback

# ============================================
# OPTIONAL - Can be added later
# ============================================

# Google OAuth (for Google Sign-In)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# AI Model Settings
OPENAI_CONVERSION_MODEL=gpt-4o
OPENAI_RERANK_MODEL=gpt-4o-mini

# Paper Discovery API Keys (optional, improves results)
SEMANTIC_SCHOLAR_API_KEY=
CORE_API_KEY=
SCIENCEDIRECT_API_KEY=
UNPAYWALL_EMAIL=your-email@example.com
NCBI_EMAIL=your-email@example.com
