% cvpr.sty - Compatible CVPR/ICCV/ECCV style for ScholarHub
% Based on CVPR formatting guidelines

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{cvpr}[2024/01/01 CVPR 2024 Compatible Style]

\DeclareOption{review}{\def\cvpr@review{}}
\DeclareOption{final}{\def\cvpr@final{}}
\DeclareOption{rebuttal}{\def\cvpr@rebuttal{}}
\DeclareOption*{\PackageWarning{cvpr}{Unknown option '\CurrentOption'}}
\ProcessOptions\relax

% Page layout - two column
\RequirePackage[twocolumn,margin=0.75in,top=0.75in,bottom=1in]{geometry}
\RequirePackage{times}
\RequirePackage{epsfig}
\RequirePackage{graphicx}
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{fancyhdr}

% Headers
\pagestyle{fancy}
\fancyhf{}
\fancyhead[C]{\small CVPR 2024}
\fancyfoot[C]{\thepage}
\renewcommand{\headrulewidth}{0pt}

% CVPR ID for review
\def\cvprPaperID#1{\def\@cvprPaperID{#1}}
\def\@cvprPaperID{}

% Conference name
\def\confName{CVPR}
\def\confYear{2024}

% Title formatting
\def\@maketitle{%
  \newpage
  \null
  \vskip 0.5em%
  \begin{center}%
  \let \footnote \thanks
    {\LARGE\bfseries \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
  \end{center}%
  \par
  \vskip 1.5em}

% Section formatting
\renewcommand\section{\@startsection {section}{1}{\z@}%
  {-3.5ex \@plus -1ex \@minus -.2ex}%
  {2.3ex \@plus.2ex}%
  {\normalfont\large\bfseries}}

\renewcommand\subsection{\@startsection{subsection}{2}{\z@}%
  {-3.25ex\@plus -1ex \@minus -.2ex}%
  {1.5ex \@plus .2ex}%
  {\normalfont\normalsize\bfseries}}

% Abstract
\renewenvironment{abstract}{%
  \small
  \begin{center}%
    {\bfseries Abstract\vspace{-.5em}\vspace{\z@}}%
  \end{center}%
  \quotation
}{\endquotation}

\endinput
